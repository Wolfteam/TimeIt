<?xml version="1.0" encoding="UTF-8" ?>
<TemplatedView
    x:Class="TimeIt.UserControls.LineControl"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <TemplatedView.ControlTemplate>
        <ControlTemplate>
            <BoxView
                BackgroundColor="{x:TemplateBinding LineColor,
                                                    Mode=OneWay}"
                HeightRequest="{TemplateBinding LineHeight,
                                                Mode=OneWay}"
                HorizontalOptions="FillAndExpand" />
        </ControlTemplate>
    </TemplatedView.ControlTemplate>
</TemplatedView>