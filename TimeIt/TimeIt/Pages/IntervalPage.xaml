                <StackLayout
                    Grid.Row="2"
                    Margin="0,0,0,10"
                    HorizontalOptions="Fill"
                    Orientation="Vertical">
                    <uc:LineControl />
                    <Label
                        FontAttributes="Bold"
                        FontSize="{OnPlatform Android='18',
                                              UWP='14'}"
                        Text="Minutes"
                        TextColor="White" />
                    <Slider
                        HorizontalOptions="Fill"
                        Maximum="99"
                        Minimum="0"
                        Value="{Binding Minutes, Mode=TwoWay}" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="{OnPlatform Android='18',
                                              UWP='14'}"
                        Text="Seconds"
                        TextColor="White" />
                    <Slider
                        HorizontalOptions="Fill"
                        Maximum="59"
                        Minimum="{Binding MinimumSeconds, Mode=OneWay}"
                        Value="{Binding Seconds, Mode=TwoWay}" />
                    <uc:LineControl />
                    <Label
                        FontSize="{OnPlatform Android='22',
                                              UWP='18'}"
                        HorizontalOptions="EndAndExpand"
                        Text="{Binding DurationString, Mode=OneWay}"
                        TextColor="White" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
